{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
